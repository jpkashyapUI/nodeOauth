<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Social Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding-top: 50px;
        }

        .btn {
            padding: 10px 20px;
            margin: 10px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .google-btn {
            background-color: #db4437;
            color: white;
        }

        .facebook-btn {
            background-color: #4267B2;
            color: white;
        }
    </style>
</head>

<body>

    <h1>Login With</h1>

    <% pageConfig.forEach(button=> { %>

        <button class="btn <%= button.labelType.toLowerCase() %>-btn"
            onclick="handleLogin('<%= button.labelType.toLowerCase() %>')">
            <%= button.labelType %>
        </button>

        <% }); %>


            <script>
                function handleLogin(type) {

                    window.location.href = `/auth/${type.toLowerCase()}`;
                }
            </script>

</body>

</html>